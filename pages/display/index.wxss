/* pages/display/index.wxss */

page {
  background: #f4f1f1;
}

.body {
  width: 100%;
  padding: 36rpx 30rpx;
  box-sizing: border-box;
}

.display {
  width: 100%;
  border-radius: 10rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.display {
  width: 100%;
  background-size: 100%;
}

.picture {
  width: 100%;
  float: left;
}

.picture_show {
  float: left;
  margin-right: 1.5%;
  text-align: center;
  line-height: 158rpx;
  border: 1px #999 dashed;
  width: 23%;
  height: 158rpx;
  color: #999;
  font-size: 40rpx;
  margin-bottom: 20rpx;
}

.picture_show:nth-child(4) {
  margin-right: 0;
}

.picture_show:nth-child(8) {
  margin-right: 0;
}

.picture_show image {
  width: 100%;
  height: 158rpx;
  background-size: cover;
}

.addpic {
  width: 100%;
  color: #999;
  font-size: 30rpx;
  text-align: center;
}

.addpic text {
  color: #db6934;
}
.border_none {
  border: none;
}

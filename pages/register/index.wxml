<view class='commodity_attr_box'>
  <view class="inputView">
    <view class='tubiao'>
      <text>+86</text>
      <image class="nameImage" src="../../assets/images/shoujihaoqianzhui@2x.png"></image>
    </view>
    <input type='text' class="inputText" placeholder="请输入手机号" bindinput="operId" />
  </view>
  <view style='clear:both;'></view>
  <view class="inputView">
    <input type='number' class="provtext" placeholder="验证码" bindinput="proving" />
    <view class='proving' bindtap="getproving">发送验证码</view>
  </view>
  <view class="inputView">
    <input type='text' class="inputText_pwd" password="true" placeholder="点击输入新密码" bindinput="operPwd" />
  </view>
  <view class="inputView">
    <input type='text' class="inputText_pwd" password="true" placeholder="再次确认新密码" bindinput="operPwd" />
  </view>
  <button class="loginBtn" bindtap="login">注册</button>
  <view class='agree'>
    <image bindtap='getshow' src="{{isshow?'../../assets/images/yonghuxieyi_gouxuan@2x.png':'../../assets/images/yonghuxieyi_weigouxuan@2x.png'}}"></image>
    已阅读并同意
    <text bindtap='useragreement'>《用户协议》</text>
  </view>
</view>
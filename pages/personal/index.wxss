page {
  background: #f1f1f1;
  box-sizing: border-box;
}

.info-cont {
  width: 100%;
}

.infoMain {
  background-color: #f1f1f1;
}

.personal {
  width: 100%;
  height: 70rpx;
  color: #999;
  background: #f1f1f1;
  font-size: 26rpx;
  padding-left: 30rpx;
  line-height: 70rpx;
  box-sizing: border-box;
}

.info-items {
  width: 100%;
  height: 130rpx;
  line-height: 130rpx;
  background: #fff;
  margin-bottom: 2px;
  padding-left: 30rpx;
  padding-right: 33rpx;
  box-sizing: border-box;
}

.infotext_left {
  float: left;
  color: #333;
  font-size: 34rpx;
}

.infotext {
  float: right;
  width: 70%;
  height: 130rpx;
  text-align: right;
}

.userinfo-avatar {
  width: 90rpx;
  height: 90rpx;
  margin: 20rpx 38rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #f4f4f4;
}

.userinfo-avatar_canvas {
  position: absolute;
  right: 30px;
  top: 4px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
}

.info-motto {
  color: black;
  text-align: right;
  margin-top: 10px;
  height: 30px;
  line-height: 30px;
  margin-right: 10px;
}

.add_pot {
  width: 100%;
  height: 50px;
  line-height: 50px;
  position: fixed;
  bottom: 0;
  left: 0;
}

.buttonExit {
  width: 80%;
  height: 40px;
  margin: 2px auto;
  line-height: 40px;
  border-radius: 20px;
  background: #fd5a1d;
  font-size: 14px;
  color: #fff;
  text-align: center;
}

.right_edit {
  width: 16rpx;
  height: 130rpx;
  float: right;
}

.img_style {
  width: 16rpx;
  height: 28rpx;
  float: right;
  margin: 30rpx 20rpx 0 12rpx;
  background-size: 100%;
}

.right_edit image {
  width: 16rpx;
  height: 28rpx;
  background-size: 100%;
  vertical-align: middle;
}

.custo {
  color: #999;
  font-size: 26rpx;
  margin-right: 36rpx;
}

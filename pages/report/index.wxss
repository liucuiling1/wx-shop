page {
  background: #f1f1f1;
}

.header {
  width: 100%;
  height: 100rpx;
  color: #333;
  font-size: 32rpx;
  padding-left: 32rpx;
  box-sizing: border-box;
  line-height: 100rpx;
  font-weight: bold;
}

.header_padding {
  width: 95%;
  padding: 5px 10px;
  box-sizing: border-box;
  background: #fff;
  margin: 15px auto;
  border-radius: 10px;
}

.butn {
  width: 100%;
  height: 90px;
}

.picter {
  float: left;
  width: 20%;
  height: 60px;
}

.picter>image {
  width: 60px;
  height: 60px;
  background-size: cover;
  margin-top: 5px;
}

.shop {
  width: 75%;
  float: right;
  margin-top: 10px;
}

.shop_right {
  height: 30px;
  width: 100%;
}

.packageName_left {
  float: left;
  color: #666;
  width: 100%;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.productName_left {
  float: left;
  color: #666;
  width: 100%;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 5px;
  white-space: nowrap;
}

.starview {
  width: 100%;
  height: 35px;
  line-height: 35px;
}

.right .star {
  float: left;
  width: 54rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  vertical-align: middle;
  margin-top: 5px;
}

.star image {
  width: 48rpx;
  height: 48rpx;
}

.review {
  width: 100%;
  height: 364rpx;
  font-size: 30rpx;
  padding-left: 32rpx;
  padding-top: 36rpx;
  box-sizing: border-box;
  background: #fff;
  position: relative;
}

.textareastyle {
  width: 100%;
  height: 140px;
}

.picture {
  width: 100%;
  float: left;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.picture_header {
  padding-top: 36rpx;
  box-sizing: border-box;
  color: #333;
  font-size: 30rpx;
}

.picture_header text {
  color: #999;
  font-size: 28rpx;
}

.add {
  width: 80%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background: #fe4b33;
  margin: 0 auto;
  margin-top: 86rpx;
  color: #fff;
  border-radius: 5px;
  font-size: 32rpx;
}

.logoinfo {
  position: relative;
  float: left;
  margin-top: 12px;
  margin-right: 8px;
}

.logoinfo image {
  background-size: cover;
}


.picture_show {
  float: left;
  margin-right: 1.5%;
  text-align: center;
  line-height: 158rpx;
  border: 1px #999 dashed;
  width: 23%;
  height: 158rpx;
  color: #999;
  font-size: 40rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.picture_show:nth-child(5) {
  margin-right: 0;
}

.picture_show image {
  width: 100%;
  height: 158rpx;
  background-size: cover;
}

.border_none {
  border: none;
}

.potion {
  position: absolute;
  bottom: 36rpx;
  right: 22rpx;
  color: #bcbcbc;
  font-size: 30rpx;
}

page {
  background: #fff;
}

.body {
  width: 100%;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.contert {
  width: 100%;
  box-sizing: border-box;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #ddbc6b;
  background: #000;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
  position: relative;
}

.contert_bg {
  width: 100%;
  box-sizing: border-box;
  border-radius: 10rpx;
  font-size: 30rpx;
  background: #e6e6e6;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  position: relative;
}

.color {
  color: #666;
}

.border-bo {
  width: 100%;
  color: #fff;
  border-bottom: 2px #ddbc6b solid;
  padding-left: 30rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
  font-size: 26rpx;
  height: 84rpx;
  line-height: 70rpx;
}

.border-bottom {
  width: 100%;
  color: #999;
  border-bottom: 2px #f5f5f5 solid;
  padding-left: 30rpx;
  box-sizing: border-box;
  margin-bottom: 16rpx;
  font-size: 26rpx;
  height: 84rpx;
  line-height: 70rpx;
}

.contert_header {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  font-weight: bold;
}

.yuan {
  position: absolute;
  top: 20rpx;
  right: 22rpx;
  width: 18rpx;
  height: 18rpx;
  background: #fff;
  border-radius: 50%;
}

.yuan_color {
  position: absolute;
  top: 20rpx;
  right: 22rpx;
  width: 18rpx;
  height: 18rpx;
  background: #f5f5f5;
  border-radius: 50%;
}

.contert_header_size {
  font-size: 24rpx;
}

.vipshare {
  width: 100%;
  padding-left: 30rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  font-weight: bold;
  color: #999;
}

.vip_titil {
  float: left;
}

.vipshare_left {
  width: 50%;
  float: left;
  line-height: 40rpx;
}

.vipshare_right {
  float: right;
  width: 130rpx;
  background: #ddbc6b;
  border-radius: 10rpx;
  text-align: center;
  margin-top: 20rpx;
  margin-right: 30rpx;
  padding: 0 5rpx;
  color: #252326;
  font-size: 24rpx;
  height: 42rpx;
  line-height: 42rpx;
}

.vipshare_right_two {
  margin-top: 40rpx;
}

.vipshare_right_three {
  margin-top: 60rpx;
}

/* 弹出层 */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.6;
  z-index: 88;
  color: #fff;
  overflow: hidden;
}

/* 弹出页面 */

.commodity_attr_box {
  position: fixed;
  bottom: 25%;
  left: 2.5%;
  z-index: 99;
  height: 512rpx;
  width: 95%;
  background: #fff;
  border-radius: 15px;
  overflow: hidden;
  padding: 15rpx 30rpx;
  box-sizing: border-box;
}

.showhader {
  color: #e0b54b;
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 50rpx;
  position: relative;
}

.showhader image {
  position: absolute;
  top: 5rpx;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  background-size: 100%;
}

.changevip {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
}

.change {
  width: 25%;
  height: 198rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  text-align: center;
}

.fontsize {
  font-size: 26rpx;
  margin-top: 20rpx;
}

.fontsize text {
  font-size: 60rpx;
}

.loginBtn {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  margin-top: 60rpx;
  border-radius: 30rpx;
  color: #2b2b2b;
  font-size: 32rpx;
  background: #e0b54b;
  outline: none;
  border: none;
}

.normal {
  border: 1px #e0b54b solid;
  color: #e0b54b;
  box-sizing: border-box;
}

.select {
  color: #2b2b2b;
}

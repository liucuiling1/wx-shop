/* pages/member/index.wxss */

page {
  background: #f1f1f1;
}

.body {
  width: 100%;
}

.header {
  width: 100%;
  height: 282rpx;
  font-size: 34rpx;
  color: #999;
  background: #fff;
  margin-top: 20rpx;
  position: relative;
}

.header textarea {
  width: 100%;
  height: 282rpx;
  overflow-y: auto;
  padding: 30rpx;
  box-sizing: border-box;
}

.potion {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
}

.type_style {
  width: 80%;
  height: 91rpx;
  line-height: 91rpx;
  float: left;
}

.header image {
  width: 30rpx;
  height: 30rpx;
  background-size: 100%;
  border: 1px red solid;
  margin-right: 29rpx;
  float: right;
  margin-top: 30rpx;
}

.add {
  width: 92%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  background: #09bb07;
  margin: 0 auto;
  margin-top: 80rpx;
  color: #fff;
  border-radius: 5px;
  font-size: 36rpx;
}

page {
  background: #f4f1f1;
}

.header {
  width: 100%;
  height: 90rpx;
  color: #333;
  font-size: 30rpx;
  padding-left: 32rpx;
  box-sizing: border-box;
  line-height: 100rpx;
}

.header_padding {
  width: 95%;
  padding: 5px 10px;
  box-sizing: border-box;
  background: #fff;
  margin: 15px auto;
  border-radius: 10px;
}

.butn {
  width: 100%;
  height: 90px;
}

.picter {
  float: left;
  width: 20%;
  height: 60px;
}

.picter>image {
  width: 60px;
  height: 60px;
  background-size: cover;
  margin-top: 5px;
}

.shop {
  width: 75%;
  float: right;
  margin-top: 10px;
}

.shop_right {
  height: 30px;
  width: 100%;
}

.packageName_left {
  float: left;
  color: #666;
  width: 100%;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.productName_left {
  float: left;
  color: #666;
  width: 100%;
  font-size: 14px;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-top: 5px;
  white-space: nowrap;
}

.starview {
  width: 100%;
  height: 35px;
  line-height: 35px;
}

.right .star {
  float: left;
  width: 54rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  vertical-align: middle;
  margin-top: 5px;
}

.star image {
  width: 48rpx;
  height: 48rpx;
}

.tital {
  width: 100%;
  height: 130rpx;
  line-height: 130rpx;
  font-size: 34rpx;
  padding-left: 32rpx;
  box-sizing: border-box;
  background: #fff;
  position: relative;
  color: #333;
}

.picture {
  width: 100%;
  float: left;
  padding: 14rpx 32rpx;
  box-sizing: border-box;
  background: #fff;
}

.picture_header {
  padding-top: 36rpx;
  box-sizing: border-box;
  color: #333;
  font-size: 30rpx;
}

.picture_header text {
  color: #999;
  font-size: 28rpx;
}

.add {
  width: 90%;
  height: 94rpx;
  text-align: center;
  line-height: 94rpx;
  background: #fe4b33;
  margin: 0 auto;
  margin-top: 50rpx;
  color: #fff;
  border-radius: 5px;
  font-size: 32rpx;
}

.logoinfo {
  position: relative;
  float: left;
  margin-top: 12px;
  margin-right: 8px;
}

.logoinfo image {
  background-size: cover;
}

.picture_show {
  float: left;
  margin-right: 1.5%;
  text-align: center;
  line-height: 158rpx;
  border: 1px #999 dashed;
  width: 23%;
  height: 158rpx;
  color: #999;
  font-size: 40rpx;
  margin-bottom: 18rpx;
  margin-top: 18rpx;
}

.picture_show:nth-child(4) {
  margin-right: 0;
}

.picture_show:nth-child(8) {
  margin-right: 0;
}

.picture_show image {
  width: 100%;
  height: 158rpx;
  background-size: cover;
}

.border_none {
  border: none;
}

.potion {
  position: absolute;
  bottom: 36rpx;
  right: 22rpx;
  color: #bcbcbc;
  font-size: 30rpx;
}

.section {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding-left: 32rpx;
  box-sizing: border-box;
  background: #fff;
}

.section image {
  width: 30rpx;
  height: 18rpx;
  float: right;
  margin-right: 30rpx;
  margin-top: 35rpx;
}

.picker {
  width: 100%;
  font-size: 30rpx;
  color: #333;
}

.fontsize {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  padding-left: 32rpx;
  box-sizing: border-box;
  font-size: 34rpx;
}

.fontsize text:nth-child(1) {
  color: #333;
}

.fontsize text {
  margin-right: 25rpx;
  color: #3f4cae;
}

.review {
  width: 100%;
  height: 326rpx;
  font-size: 30rpx;
  padding: 32rpx;
  box-sizing: border-box;
  background: #fff;
  position: relative;
  margin-top: 12rpx;
  color: #999;
}

.textareastyle {
  width: 100%;
  height: 294rpx;
  box-sizing: border-box;
}
